{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "entityMappings": {
      "modes": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "entity": {
              "description": "file name of where this entity is",
              "type": "string"
            },
            "id": {
              "type": "integer"
            }
          },
          "required": [
            "entity",
            "id"
          ]
        }
      }
    },
    "settings": {
      "type": "object",
      "properties": {
        "width": {
          "type": "integer"
        },
        "height": {
          "type": "integer"
        },
        "edgePolicy": {
          "type": "integer"
        }
      },
      "required": [
        "name",
        "controlType",
        "movementType"
      ]
    },
    "layout": {
      "type": "array",
      "items": {
        "description": "x.y, x is the type id, y is the mode, if no .y uses 0 as y, y is indexed based on mode's index order",
        "type": "string"
      }
    }
  },
  "required": [
    "entityMappings",
    "settings",
    "layout"
  ]
}
